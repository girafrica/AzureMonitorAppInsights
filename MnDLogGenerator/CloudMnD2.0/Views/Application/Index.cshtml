@{
    ViewData["Title"] = "Emulate application";
}
@model CloudMnD2._0.Models.ApplicationModel

<h1>Emulate @Html.DisplayFor(model => model.RoleName) application</h1>
<button id="btnChangeAppModal" type="button" class="btn btn-outline-info">
    Change application
</button>
<div>
    <hr />
    <div class="input-group">
        <input id="numberOfExceptions" class="form-control" placeholder="Enter number of exceptions" type="number" min="1" , max="20">
        <span class="input-group-btn">
            <button type="button" id="generateExceptionBtn" class="btn btn-danger">Flush Exception(s)</button>
        </span>
    </div>

</div>
<h5></h5>
<hr>
<input id="availabilityState" type="checkbox" checked="@Model.AvailabilitySenderState" data-toggle="toggle" data-on="<i class='fa fa-play'></i>Availability sender is started" data-off="<i class='fa fa-pause'></i>Availability sender is stoped" data-onstyle="outline-success" data-offstyle="outline-danger" data-width="250" data-height="20">
<hr>
<input id="requestState" type="checkbox" checked="@Model.RequestSenderState" data-toggle="toggle" data-on="<i class='fa fa-play'></i>Request sender is started" data-off="<i class='fa fa-pause'></i>Request sender is stoped" data-onstyle="outline-success" data-offstyle="outline-danger" data-width="250" data-height="20">
<hr>
<h5>Logs</h5>
<textarea id="logs" rows="10" class="form-control" readonly></textarea>
<h5></h5>
<button type="button" id="cleanLogsBtn" class="btn btn-outline-info">Clean logs</button>
<!-- Modal -->
<div class="modal fade" tabindex="-1" id="newAppNameModal"
     data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Change Application</h4>
                <button type="button" class="close" data-dismiss="modal">
                    ×
                </button>
            </div>
            <div class="modal-body">
                <form id="SetUpApplication" method="post" onsubmit="return SetAppRoleName()">
                    <div class="form-group">
                        <select lass="form-control" id="roleName">
                            <option value="">Please choose an option</option>
                            <option value="E3ET_3ETemplates">3ETemplates</option>
                            <option value="E3ET_EIF">EIF</option>
                        </select>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-outline-secondary">Change</button>
                        <button type="button" id="btnHideAppNameModal" class="btn btn-outline-secondary">Cancel</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="infoModal">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title">Info</h6>
                <button type="button" class="close" data-dismiss="modal">
                    ×
                </button>
            </div>
            <div class="modal-body">
                <p></p>
            </div>
        </div>
    </div>
</div>
<div id="loading-overlay">
    <div class="loading-icon"></div>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<link href="~/lib/bootstrap/dist/css/bootstrap4-toggle.min.css" rel="stylesheet">
<script src="~/lib/bootstrap/dist/js/bootstrap4-toggle.min.js"></script>
<script src="~/js/site.js"></script>